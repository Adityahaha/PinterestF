<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="uploadform" action="/fileupload" method="post" enctype="multipart/form-data" hidden>
        <input type="file" name="image">
    </form>
  <div class="profdets flex flex-col items-center mt-20">
    <div class="relative">
        <span id="uploadicon" class="w-8 h-8 bottom-0 right-0 rounded-full flex items-center justify-center absolute bg-zinc-200">
            <i class="ri-pencil-fill text-zinc-800"></i>
        </span>
        <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
        </div>
    </div>
    <h1 class="text-3xl text-white font-semibold mt-5">Aditya Gupta</h1>
    <h3 class="text-md">@username</h3>
    <a href="/edit" class="px-7 py-2 bg-zinc-700 mt-5 rounded-full text-xs font-semibold"
    >Edit</a>
    <a href="/add" class="px-8 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-8">Add New Post</a>
  </div>
  <div class="cards flex px-10 mt-10 flex-wrap gap-10">
    <div class="card">
      <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user.posts[0].postimage %>"  alt="thi" >
      </div>
      <h3 class="text-xl font-semibold mt-3">Your Uploaded Pins</h3>
      <h5 class="text-sm font-medium"><%= user.posts.length %></h5>
    </div>
    </div>
  </div>
</div>


<script>
    document.querySelector("#uploadicon").addEventListener("click",function(){
        document.querySelector("#uploadform input").click()
    })
    document.querySelector("#uploadform input").addEventListener("change",function(){
        document.querySelector("#uploadform").submit();
    })
</script>
<% include ./partials/footer.ejs %>
