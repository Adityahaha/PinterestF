<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
<div class="w-[25vw]  px-20 py-10 rounded-md bg-white bg-zinc-100">
  <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter leading-none capitalize">Create new account</h1>
  <form action="/register" method="post">
    <input class="border-2 block mt-2 w-full px-3 py-2 rounded-md" type="text" name="username" placeholder="username">
    <input class="border-2 block mt-2 w-full px-3 py-2 rounded-md" type="text" name="fullname" placeholder="Full Name">
    <input class="border-2 block mt-2 w-full px-3 py-2 rounded-md" type="email" name="email" placeholder="email">
    <input class="border-2 block mt-2 w-full px-3 py-2 rounded-md" type="number" name="contact" placeholder="contact">
    <input class="border-2 block mt-2 w-full px-3 py-2 rounded-md" type="password" name="password" placeholder="password">
    <input class="border-2 block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create new account">
    <p class="text-xs font-semibold text-zinc-700 text-center mt-7 w-3/4 mx-auto">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
  </form>
  <a href="/" class="inline-block mt-7 font-semibold text-sm text-zinc-700 text-center w-full">Login existing account</a>
</div>
</div>


<% include ./partials/footer.ejs %>